<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".UI.verify_mail">

    <TextView
        android:id="@+id/verifymailTitle"
        android:padding="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="@string/verify_your_e_mail_address"/>

    <TextView
        android:id="@+id/verifymailSent"
        android:layout_below="@+id/verifymailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:padding="24sp"
        android:gravity="center"
        android:textSize="17sp"
        android:text="@string/sentence"/>


    <TextView
        android:id="@+id/sen2"
        android:layout_below="@id/verifymailSent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24sp"
        android:layout_marginTop="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="Please Check your mail"/>

</RelativeLayout>